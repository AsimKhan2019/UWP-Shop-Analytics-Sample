<Page
    x:Class="IoTClient.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IoTClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="EnterButton" Content="Enter Event" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,200,200" Width="150" Height="50" FontSize="24" Visibility="Collapsed" Click="EnterButton_Click"/>
        <Button x:Name="ExitButton" Content="Exit Event" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="200,0,0,200" Width="150" Height="50" FontSize="24" Visibility="Collapsed" Click="ExitButton_Click"/>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="GpioStatus" FontSize="40"/>
    </Grid>
</Page>
